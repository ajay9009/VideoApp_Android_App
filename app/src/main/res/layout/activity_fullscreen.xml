<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fullscreen">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/exoplayer_fullscreen"
        app:resize_mode="fit"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:paddingBottom="4dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:rewind_increment="10000"
        app:fastforward_increment="10000"
        app:auto_show="true"
        app:surface_type="surface_view"
        app:use_controller="true"
        app:controller_layout_id="@layout/layout_exoplayer_control_views"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="15sp"
        android:id="@+id/tv_fullscreen"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/roration"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Turn on Rotation to view this video in full screen"
        android:textSize="15sp"
        android:id="@+id/rotate_desc"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:gravity="center"/>



</LinearLayout>